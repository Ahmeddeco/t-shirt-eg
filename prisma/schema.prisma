generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  seller
  user
}

model User {
  id     String  @id @default(uuid())
  name   String
  email  String  @unique
  image  String?
  mobile String? @unique
  role   Role    @default(user)
}
